{
  "name": "kapo-auth-backend-template",
  "version": "1.0.0",
  "description": "Plantilla de backend básico con autenticación de usuarios y GraphQL",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "bun run --watch src/main.ts",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 src/**/*.graphql dist",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "backend-template",
    "authentication",
    "hexagonal-architecture",
    "graphql",
    "mongodb",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/storage": "^7.19.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "apollo-server-core": "^3.12.1",
    "apollo-server-express": "^3.12.1",
    "apollo-upload-client": "^19.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-upload": "^15.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.0.3",
    "sharp": "^0.33.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/graphql-upload": "^8.0.12",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
